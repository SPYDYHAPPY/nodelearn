<body>
    {{> navbar}}
    <div class="form-box" id="login-form">
        <div class="button-box">
            <div id="btn" class="btn"></div>
            <button type="button" onclick="login()" class="toggle-btn">
                LOGIN
            </button>
            <button type="button" onclick="register()" class="toggle-btn">
                REGISTER
            </button>
        </div>
        <form id="login" class="input-group">
            <p id="login_notification"></p>
            <input type="text" id="u_email" class="input-field" placeholder="Email Id" />
            <input type="password" id="u_pass" class="input-field" placeholder="Password" />
            <input type="checkbox" class="check-box" />
            <p class="mt-3">Remember Password</p>
            <button type="button" id="login_btn" class="submit-btn">Log In</button>
        </form>
        <form id="register" class="input-group">
            <p id="register_notification"></p>
            <input type="text" id="name" class="input-field" placeholder="Name" />
            <input type="email" id="email" class="input-field" placeholder="Email Id" />
            <input type="password" id="pass" class="input-field" placeholder="Enter Password" />
            <input type="password" id="con_pass" class="input-field" placeholder="Confirm Password" />
            <input type="checkbox" class="check-box" />
            <p class="mt-3">I agree to the terms and conditions.</p>
            <button type="button" id="reg_btn" class="submit-btn">Register</button>
        </form>
    </div>


    <script src="js/login.js"></script>
    <script src="js/register.js"></script>

