{{!-- Dashboard --}}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
    class="navcontent" id="dashboard">
    <h1 class="h2">Dashboard</h1>
</div>

<div class="container m-2">
    <div class="row">
        {{!-- Products --}}
        <div class="col-sm-3 m-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <div class="py-1 mt-1">
                        <p class="card-text me-1 position-relative">Newest<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-danger">4</span>
                        </p>
                        <p class="card-text me-1 position-relative">Top Selling<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-info">4</span>
                        </p>
                        <p class="card-text me-1 position-relative">Trending<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary me-1">3</span>
                        </p>
                        <p class="card-text me-1 position-relative">Brands<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success me-1">3</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Orders --}}
        <div class="col-sm-3 m-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <div class="py-1 mt-1">
                        <p class="card-text me-1 position-relative">New<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-danger">4</span>
                        </p>
                        <p class="card-text me-1 position-relative">In Process<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-info">4</span>
                        </p>
                        <p class="card-text me-1 position-relative">Ready to Dispatch<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary me-1">3</span>
                        </p>
                        <p class="card-text me-1 position-relative">Delivered<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success me-1">3</span>
                        </p>

                    </div>
                </div>
            </div>
        </div>

        {{!-- Reports --}}
        <div class="col-sm-3 m-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Reports</h5>
                    <div class="py-1 mt-1">
                        <p class="card-text me-1 position-relative">Last Week<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-danger">4</span>
                        </p>
                        <p class="card-text me-1 position-relative">Monthly<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-info">4</span>
                        </p>
                        <p class="card-text me-1 position-relative">Half-Yearly<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary me-1">3</span>
                        </p>
                        <p class="card-text me-1 position-relative">Yearly<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success me-1">3</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Track Orders --}}
        <div class="col-sm-3 m-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Track Orders</h5>
                    <div class="py-1 mt-1">
                        <p class="card-text me-1 position-relative">Inprocess<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-danger">4</span>
                        </p>
                        <p class="card-text me-1 position-relative">Warehouse Pending<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-info">4</span>
                        </p>
                        <p class="card-text me-1 position-relative">Ready to Dispatch<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary me-1">3</span>
                        </p>
                        <p class="card-text me-1 position-relative">Critical Order<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success me-1">3</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Sellers --}}
        <div class="col-sm-3 m-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sellers</h5>
                    <div class="py-1 mt-1">
                        <p class="card-text me-1 position-relative">Urban<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-danger">4</span>
                        </p>
                        <p class="card-text me-1 position-relative">Semi-Urban<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-info">4</span>
                        </p>
                        <p class="card-text me-1 position-relative">Third Party<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-info">4</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>


        {{!-- Customers --}}
        <div class="col-sm-3 m-1">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Customers</h5>
                    <div class="py-1 mt-1">
                        <p class="card-text me-1 position-relative">Total<span
                                class="position-absolute top-0 start-100 translate-middle badge rounded-pill me-1 bg-danger">4</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>