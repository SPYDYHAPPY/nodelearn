<h3 class="d-flex justify-content-between align-items-center mb-3">
  <span class="text-muted">Your cart</span>
  <button class="btn btn-outline-danger rounded-pill" id="remove_all"><i class="bi bi-trash2"></i>
    clear all
    <span class="badge bg-secondary rounded-pill" id="cartitem"></span>
  </button>
</h3>
<div class="col-md-12 mb-4 w-100 overflow-auto" style="height: 30rem;">
  <div class="container-sm p-1">
    <ul class="list-group mb-2">
      {{#Cartlist sales}}
      <li
        class="border-0 list-group-item d-flex justify-content-between align-items-start alert bg-light alert-dismissible fade show"
        role="alert">
        <div class="ms-2 me-auto">
          <span class="badge bg-primary rounded-pill text-sm-start">{{ quantity }}</span>
          <div class="fw-bold">{{product_title}}</div>
          <span class="text-md-start text-muted">{{cart_id}}</span>, Price: {{ product_price }}
        </div>
        <a class="btn btn-close" data-bs-dismiss="alert" aria-label="Close"></a>
      </li>
      {{/Cartlist}}
    </ul>
  </div>
</div>
<div class="border-0 list-group-item d-flex justify-content-between">
  <span>Total (INR)</span>
  <span><b id="total">{{ listTotal }}</b></span>
</div>
<div class="d-flex justify-content-end mt-1 py-1">
  <button class="btn btn-outline-secondary rounded-pill me-2" type="button">Canel Order</button>
  <button class="btn btn-outline-primary rounded-pill" type="submit">Place Order</button>
</div>

